   
<!DOCTYPE html>
<html>
  <head>
    <title>Simple Group Chat on Node.js</title>
    <style>
      #new_user{
        position:absolute; /*it can be fixed too*/
        left:0; right:0;
        top:0;bottom:0;
        margin:auto;
        width: 40%;
        padding-left: 150px;
        padding-top: 150px;
        padding-right: 0px;
      }
      #user{
        width: 40%;
      }
      img{border:solid 1px red; margin:10px;}
      .selected{
        box-shadow:0px 12px 22px 1px #333;
      }
      .avatar {
        vertical-align: middle;
        width: 50px;
        height: 50px;
        border-radius: 50%;
      }      
      input{ padding:20px}
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font: 13px Helvetica, Arial; }
        form { background: #fff; padding: 3px; position: fixed; bottom: 0; width: 100%; border-color: #000; border-top-style: solid; border-top-width: 1px;}
        form input { border-style: solid; border-width: 1px; padding: 10px; width: 85%; margin-right: .5%; }
        form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; margin-left: 2%; }
        #messages { list-style-type: none; margin: 0; padding: 0; }
        #messages li { padding: 5px 10px; }
        #messages li:nth-child(odd) { background: #eee; }
      .topnav {
        background-color: #333;
        overflow: hidden;
      }

      .topnav a {
        float: left;
        color: #f2f2f2;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 17px;
      }

      .topnav a:hover {
        background-color: #ddd;
        color: black;
      }

      .topnav a.active {
        background-color: #FFFF00;
        color: black;
      }      
      body{
                font-family: arial;
                margin: 0;
            }
            nav{
                background:black;
                padding: 20px 10px;
            }
            nav ul{
                max-width: 100%;
                margin: 0 ;
                padding: 0;
            }
            nav li{
                list-style-type: none;
                display: inline-block;
                margin: 0 10px 0 0;
            }
            nav a{
                color: #fff;
                font-size: 18px;
                background: rgba(255,255,255,0.2);
                text-decoration: none;
                padding: 10px;
                display: block;
            }  
            nav li img{
                float: right;
                width: 30px;
                height: 30px;
            }
            img{             
                width: 30px;
                height: 30px;
            }
</style>
    
    <script src="/socket.io/socket.io.js"></script>
    <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
  <body>
    <nav>
        <ul>
            <% if (user) { %>
            <li style='float:right'><a href="/auth/logout">Log out</a></li>
            <% } else { %>
            <li style='float:right'><a href="/auth/login">Login</a></li>
            <% } %>
            <li><a href="/homepage">Homepage</a></li>
            <li><a href="/profile">Profile</a></li>
            <li><a href="/chat">Chat</a></li>
            <li style="float: right"><img src="<%= user.thumbnail %>" /></li>
        </ul>
    </nav>
  <div id="new_user">
    <div class="form-group mx-sm-3 mb-2">
      <label><strong>Username:</strong></label>
    </div>
    <div class="form-group mx-sm-3 mb-2">
      <input class="form-control" id="user" placeholder="username"> 
    </div>
      <button type="submit" id="submit" class="btn btn-primary mx-sm-3 mb-2">Join!</button>
   </div>
  <div id="msg" style="display:none">
    <h2 style="display:none;" id="uid"><%= user.username %></h2>
    <h2 style="display:none;" id="avatar"><%= user.thumbnail %></h2>
    <ul id="messages"></ul>
    <form action="/" method="POST" id="chatForm">
      <input id="txt" autocomplete="off" autofocus="on" oninput="isTyping()" placeholder="type your message here..." /><button>Send</button>
    </form>
  </div>
    <script>   
           console.log($("#uid").html())
            var socket = io.connect(window.location.hostname);

            $(document.body).on('click',".avatar",function(){
              $(".avatar").removeClass("selected");
              $(this).addClass("selected");
            })
            
            $('form').submit(function(e){
                e.preventDefault(); 
                socket.emit('chat_message', $('#txt').val());
                $('#txt').val('');
                return false;
            });
           
            socket.on('chat_message', function(msg){
              console.log(msg)
                $('#messages').append($('<li>').html(msg));
            });
            
            socket.on('is_online', function(username) {
                
                $('#messages').append($('<li>').html(username));
            });
            $( document ).ready(function() {
                console.log( "ready!" );
                var data={}
                data.username = $("#uid").html(); 
                data.avatar = $("#avatar").html();                                 
                socket.emit('username', data);
                $("#new_user").hide();
                $("#msg").show()
            });            
            
    </script>
  </body>
</html>
