<script>
  var socket = io.connect('http://localhost:3000');
  socket.on('dashboard_status', function(data) {    
                console.log('data',data) 
                var html=""
                for (var x = 0; x < data.length; x++){
                    console.log(data[0].status)
                    console.log('status',data[x])
                    var arrayBufferView = new Uint8Array(data[x].img.data.data);
                    var blob = new Blob( [ arrayBufferView ], { type: "image/jpeg" } );
                    var urlCreator = window.URL || window.webkitURL;
                    var imageUrl = urlCreator.createObjectURL( blob );
                    html += "<div class='row final'><strong>"+data[x].name+"</strong></div><div class='row final'><p>"+data[x].status+"</p><img src='"+imageUrl+"'</div>"
                    $("#append").html(html);                      
                }                           
        });
</script>